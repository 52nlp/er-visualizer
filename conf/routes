# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Entity Stuff
GET /entity/all             controllers.Application.entityHeaders
GET /entity/info/:id        controllers.Application.entityInfo(id: String)

# Relation Stuff
GET /relation/all                       controllers.Application.relationHeaders
GET /relation/freebase/:sid/:tid        controllers.Application.relationFreebase(sid: String, tid: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
