# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /db/:name                   controllers.Application.reset(name: String)

# Docs etc.
GET /docs/doc/:doc    controllers.Application.document(doc: String)
GET /docs/sentence/:doc/:sid    controllers.Application.sentence(doc: String, sid: Int)

# Entity Stuff
GET /entity/all             controllers.Application.entityHeaders
GET /entity/info/:id        controllers.Application.entityInfo(id: String)
GET /entity/fb/:id        controllers.Application.entityFreebase(id: String)
GET /entity/rels/:id        controllers.Application.entityRelations(id: String)
GET /entity/text/:id        controllers.Application.entityText(id: String)
GET /entity/kba/:id        controllers.Application.entityKBA(id: String)
GET /entity/types/:id        controllers.Application.entityTypes(id: String)
GET /entity/typeprov/:id/:etype        controllers.Application.entityTypeProv(id: String, etype: String)

# Relation Stuff
GET /relation/all                       controllers.Application.relationHeaders
GET /relation/fb/:sid/:tid        controllers.Application.relationFreebase(sid: String, tid: String)
GET /relation/text/:sid/:tid        controllers.Application.relationText(sid: String, tid: String)
GET /relation/kba/:sid/:tid        controllers.Application.relationKBA(sid: String, tid: String)
GET /relation/types/:sid/:tid        controllers.Application.relationPredictions(sid: String, tid: String)
GET /relation/typeprov/:sid/:tid/:rtype        controllers.Application.relationProvenances(sid: String, tid: String, rtype: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


### KBA stuff

GET     /kba                              controllers.ApplicationKBA.index
GET /kba/entities                         controllers.ApplicationKBA.entities
GET /kba/documents/:eid                   controllers.ApplicationKBA.documents(eid: String)
GET /kba/wordcloud/:eid/:cid/:timestamp   controllers.ApplicationKBA.clusterWordCloud(eid: String, cid: Int, timestamp: Long)
GET /kba/wordcloud/:eid/:timestamp        controllers.ApplicationKBA.documentWordCloud(eid: String, timestamp: Long)